def calculate_bill(units):
    if units <= 199:
        bill_amount = units * 1.20
    elif units >= 200 and units < 400:
        bill_amount = units * 1.50
    elif units >= 400 and units < 600:
        bill_amount = units * 1.80
    else:
        bill_amount = units * 2.00

    if bill_amount > 400:
        bill_amount += bill_amount * 0.15

    if bill_amount < 100:
        bill_amount = 100

    return bill_amount

def main():
    units = int(input())
    bill_amount = calculate_bill(units)
    print("{:.2f}".format(bill_amount))

if __name__ == "__main__":
    main()
